{View DIV class:"hortense-chrono"
  view.attribs: {
    initial-time: {integer 180}
    value: {integer 0}
    start: {action behind:onStart}
  }

  [
    {DIV [
      {DIV textcontent:{Bind value converter:behind.minutes}}
      {DIV [':']}
      {DIV textcontent:{Bind value converter:behind.seconds}}
    ]}
  ]
}